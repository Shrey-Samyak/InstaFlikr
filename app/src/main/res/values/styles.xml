<resources>  
     <style name="Theme.Flickrtheme" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_flickrtheme</item>
        <item name="popupMenuStyle">@style/PopupMenu.Flickrtheme</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Flickrtheme</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Flickrtheme</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Flickrtheme</item>
        <item name="actionBarStyle">@style/ActionBar.Transparent.Flickrtheme</item>
        <item name="actionModeBackground">@drawable/cab_background_top_flickrtheme</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_flickrtheme</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Flickrtheme</item> 
    </style>

    <style name="ActionBar.Solid.Flickrtheme" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_flickrtheme</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_flickrtheme</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_flickrtheme</item>
        <item name="progressBarStyle">@style/ProgressBar.Flickrtheme</item>
    </style>

    <style name="ActionBar.Transparent.Flickrtheme" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_flickrtheme</item>
        <item name="progressBarStyle">@style/ProgressBar.Flickrtheme</item>
    </style>
	
    <style name="PopupMenu.Flickrtheme" parent="@style/Widget.Sherlock.Light.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_flickrtheme</item>	
    </style>
	
    <style name="DropDownListView.Flickrtheme" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_flickrtheme</item>
    </style>

    <style name="ActionBarTabStyle.Flickrtheme" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_flickrtheme</item>
    </style>
	
    <style name="DropDownNav.Flickrtheme" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_flickrtheme</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_flickrtheme</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_flickrtheme</item>
    </style>
    
    <style name="ProgressBar.Flickrtheme" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_flickrtheme</item>
    </style>
    
    <style name="ActionButton.CloseMode.Flickrtheme" parent="@style/Widget.Sherlock.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_flickrtheme</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Flickrtheme.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Flickrtheme</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Flickrtheme</item>
    </style>
    
</resources>
