<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/instagrambackground" >

    <ImageView
        android:id="@+id/instagramIconImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/instagramDownloadButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:contentDescription="@string/instagramIconContDesc"
        android:src="@drawable/instagram11" />

    <EditText
        android:id="@+id/instagramVideourl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/instagramvideoedittext"
        android:gravity="center"
        android:hint="@string/instagramVideoBaseURLHint"
        android:singleLine="true"
        android:textColor="@color/instagramVideoTextColor"
        android:textColorHint="@color/instagramVideoTextColor"
        android:textSize="16sp" />

    <Button
        android:id="@+id/instagramDownloadButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instagramVideourl"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/downloadinstagrambutton"
        android:text="@string/instagramDownloadButton"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/instagramPreviewVideo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instagramDownloadButton"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/instagramvideopreviewbutton"
        android:text="@string/instagramVideoPreview"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/videoLoadingText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instagramPreviewVideo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/instagramLoadingVideo"
        android:textColor="@color/white"
        android:textSize="18sp" />
    

	<com.startapp.android.publish.banner.Banner
	    android:id = "@+id/bannerAd"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"	
        android:layout_below="@+id/videoLoadingText"
        android:layout_alignParentBottom="true" />
</RelativeLayout>