<?xml version = "1.0" encoding = "utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <ru.biovamp.widget.CircleLayout
        android:id="@+id/circularLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoFilterPixelate"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/filterPixelateContDesc"
            app:border_color="@color/white"
            app:border_width="2dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoFilterAverageBlur"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/filterAverageBlurConteDesc"
            app:border_color="@color/white"
            app:border_width="2dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoFilterGaussianBlur"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/filterGaussianBlurConteDesc"
            app:border_color="@color/white"
            app:border_width="2dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoFilterSoftGlow"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/filterSoftGlowContDesc"
            app:border_color="@color/white"
            app:border_width="2dp" />
    </ru.biovamp.widget.CircleLayout>

</RelativeLayout>