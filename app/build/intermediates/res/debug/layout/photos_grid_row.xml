<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants" >

    <com.pluralapps.instaflikr.SquareImageView
        android:id="@+id/photoImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/photoImageContDesc"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/flickrImageOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/overlayColor"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="13sp" />

</RelativeLayout><!-- From: file:/Users/pluralism/Desktop/InstaFlikr/app/src/main/res/layout/photos_grid_row.xml -->